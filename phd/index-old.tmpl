	    		var row = '<tr><td><input type="text" class="course" name="'+field+'['+i+'][course]" placeholder="Course" value=""></td><td><input type="text" id="term'+i+'" name="'+field+'['+i+'][term]" placeholder="e.g. Fall 2013" value=""></td><td><input type="text" class="'+field+'credits" name="'+field+'['+i+'][credits]" placeholder="Credits" value=""></td></tr>';
	    		$(tb+' > tbody:last').append(row);
    		}
    	}
